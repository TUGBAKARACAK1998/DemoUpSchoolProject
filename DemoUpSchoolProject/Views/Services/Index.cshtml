@using DemoUpSchoolProject.Models.Entities
@model List<TblServices>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int sayac = 0;
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
 
        @foreach (var item in Model)
        {
            sayac += 1;
<tr>
    <td>@sayac</td>
    <td>@item.Title</td>
    <td><a href="/Services/DeleteService/@item.ServiceID" class="btn btn-danger">SİL</a></td>
    <td><a href="/Services/UpdateService/@item.ServiceID" class="btn btn-success">GÜNCELLE</a></td>
</tr>
        }
   


</table>
<a href="/Services/AddServices/" class="btn btn-primary">Yeni Hizmet Ekle </a>